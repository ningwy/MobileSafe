<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ningwy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.github.ningwy.activities.SettingActivity">

    <TextView
        style="@style/activity_title"
        android:text="设置中心" />

    <io.github.ningwy.views.SettingItemView
        android:id="@+id/stv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ningwy:item_title="设置自动更新"
        ningwy:update_off="应用自动更新已经关闭"
        ningwy:update_on="应用自动更新已经开启" />

    <io.github.ningwy.views.SettingItemView
        android:id="@+id/stv_call_listener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ningwy:item_title="启动来电监听"
        ningwy:update_off="来电监听已经关闭"
        ningwy:update_on="来电监听已经开启" />

    <io.github.ningwy.views.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ningwy:item_title="设置来电显示风格" />

    <io.github.ningwy.views.SettingClickView
        android:id="@+id/scv_change_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ningwy:item_title="设置来电显示位置"
        ningwy:update_off="点击拖动显示框设置" />

    <io.github.ningwy.views.SettingItemView
        android:id="@+id/stv_black_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ningwy:item_title="设置黑名单拦截"
        ningwy:update_off="黑名单拦截已经关闭"
        ningwy:update_on="黑名单拦截已经开启" />

    <io.github.ningwy.views.SettingItemView
        android:id="@+id/stv_app_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ningwy:item_title="设置程序锁"
        ningwy:update_off="程序锁已经关闭"
        ningwy:update_on="程序锁已经开启" />

</LinearLayout>
